                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="25dp"
                                app:boxBackgroundColor="@color/azure"
                                app:boxStrokeColor="@color/black"
                                app:hintTextColor="@color/black">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/textEdit_3_Compete"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Question of Task3"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />

                            </com.google.android.material.textfield.TextInputLayout>


                            <Button
                                android:id="@+id/btn_3_Compete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/buttonBlue"
                                android:text="Send Answer"
                                android:textColor="@color/whiteTextColor"
                                android:textSize="20sp" />


                            <TextView
                                android:id="@+id/text_3_Status_Compete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/bitter"
                                android:text="Incomplete Task"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_task4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:elevation="15dp"
                        app:cardBackgroundColor="@color/azure"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_Tasks4_Compete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/bitter"
